{
  "id": null,
  "uid": "pg-ha-pdns",
  "title": "PostgreSQL HA (Bitnami + PowerDNS)",
  "tags": ["postgres", "powerdns", "ha", "repmgr"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "row",
      "title": "Cluster Overview",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "panels": []
    },
    {
      "id": 1,
      "type": "stat",
      "title": "Cluster Primary Node",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "pg_is_in_recovery{job=\"postgres-ha-postgresql\"} == 0",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 0 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "1": { "text": "Replica" },
                "0": { "text": "Primary" }
              }
            }
          ]
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Replication Lag (seconds)",
      "gridPos": { "h": 8, "w": 12, "x": 6, "y": 1 },
      "targets": [
        {
          "expr": "pg_replication_lag{job=\"postgres-ha-postgresql\"}",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 10 },
              { "color": "red", "value": 30 }
            ]
          }
        }
      },
      "options": { "legend": { "showLegend": true }, "tooltip": { "mode": "multi" } }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Connections per Node",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 9 },
      "targets": [
        {
          "expr": "pg_stat_activity_count{job=\"postgres-ha-postgresql\"}",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "connections",
          "color": { "mode": "palette-classic" }
        }
      },
      "options": { "legend": { "showLegend": true } }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Transactions (commits per second)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 9 },
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit{job=\"postgres-ha-postgresql\"}[1m])",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops", "color": { "mode": "palette-classic" } }
      },
      "options": { "legend": { "showLegend": true } }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Cache Hit Ratio",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 17 },
      "targets": [
        {
          "expr": "pg_stat_database_blks_hit{job=\"postgres-ha-postgresql\"} / (pg_stat_database_blks_hit{job=\"postgres-ha-postgresql\"} + pg_stat_database_blks_read{job=\"postgres-ha-postgresql\"})",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "color": { "mode": "continuous-BlYlRd" } }
      },
      "options": { "legend": { "showLegend": true } }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Replication State (Streaming vs Sync)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 17 },
      "targets": [
        {
          "expr": "pg_replication_state{job=\"postgres-ha-postgresql\"}",
          "legendFormat": "{{state}}:{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 7,
      "type": "table",
      "title": "Cluster Role Summary",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 25 },
      "targets": [
        {
          "expr": "pg_is_in_recovery{job=\"postgres-ha-postgresql\"}",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "desc": false, "displayName": "Value" }]
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Replication Lag Alert Thresholds",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 33 },
      "targets": [
        { "expr": "pg_replication_lag{job=\"postgres-ha-postgresql\"}", "legendFormat": "{{pod}}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 10 },
              { "color": "red", "value": 30 }
            ]
          }
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(kube_pod_info, namespace)",
        "refresh": 2,
        "current": { "text": "powerdns", "value": "powerdns" }
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
